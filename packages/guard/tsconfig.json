{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "downlevelIteration": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "src/*": ["src/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": ["src/**/*", "types/*.d.ts", "types/*.ts"],
  "exclude": ["node_modules", "dist", "**/*spec.ts", "tests"]
}
