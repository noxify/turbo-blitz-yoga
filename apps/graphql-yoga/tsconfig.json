{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "types/*.d.ts", "types/*.ts", "jest"],
  "exclude": ["node_modules", "dist", "**/*spec.ts", "tests"]
}
