{
  "name": "blitzjs",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "dev": "pnpm with-env blitz dev",
    "build": "pnpm with-env blitz build",
    "start": "blitz start",
    "lint": "SKIP_ENV_VALIDATION=1 eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "with-env": "dotenv -c -e ../../.env --"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@acme/db": "*",
    "@acme/permissions": "*",
    "@blitzjs/auth": "2.0.0-beta.23",
    "@blitzjs/next": "2.0.0-beta.23",
    "@blitzjs/rpc": "2.0.0-beta.23",
    "blitz": "2.0.0-beta.23",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "secure-password": "4.0.0",
    "zod": "3.20.6",
    "final-form": "4.20.9",
    "react-final-form": "6.5.9"
  },
  "devDependencies": {
    "dotenv-cli": "7.0.0",
    "@next/bundle-analyzer": "13.1.6",
    "@types/node": "18.14.0",
    "@types/preview-email": "2.0.1",
    "@types/react": "18.0.28",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "eslint": "8.34.0",
    "eslint-config-next": "13.1.6",
    "eslint-config-prettier": "8.6.0",
    "jsdom": "21.1.0",
    "prettier": "^2.8.4",
    "pretty-quick": "3.1.3",
    "preview-email": "3.0.10",
    "typescript": "^4.9.5",
    "vitest": "0.28.5"
  },
  "private": true
}
